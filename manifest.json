{
  "manifest_version": 3,
  "name": "LearnWeb File Downloader",
  "version": "1.0",
  "description": "Automatically download all files from a LearnWeb page into organized folders.",
  "permissions": ["downloads", "activeTab", "scripting", "storage", "notifications"],
  "host_permissions": ["https://www.uni-muenster.de/LearnWeb/learnweb2/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo24.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "icons": {
    "16": "logo24.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.uni-muenster.de/LearnWeb/learnweb2/*"],
      "js": ["content.js"]
    }
  ]
}

